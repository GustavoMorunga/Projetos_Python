
def main():
    resposta = input('Escreva uma palavra: ')
    letras = []
    RESPOSTA = resposta.upper()
    for i in RESPOSTA:
        if i in letras:
            print(f'{resposta} tem letras repetidas!')
            exit()
        else:
            letras.append(i)
    print(f'{resposta} n√£o tem letras repetidas.')

if __name__ == '__main__':
    main()
